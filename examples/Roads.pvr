	import VR, math
	from VR.Math import Vec3
	
	if hasattr(VR, 'scene'): VR.scene.destroy()
	VR.scene = VR.Object('scene', 'light')
	
	
	o = VR.Ontology('Driving')
	o.addModule('Object')
	o.addModule('World')
	VR.ontology = o
	
	world = VR.WorldGenerator.WorldGenerator()
	world.setOntology(o)
	world.addSpatialCollisions()
	world.addLodTree()
	world.addLodTree()
	roads = world.addRoadNetwork()
	world.addAssetManager()
	world.addDistrict()
	VR.roads = roads
	VR.scene.addChild(world)
	
	def doGrid(N, L, D):
		nodes = [[0]*N for x in range(N)]
		for i in range(N):
			for j in range(N):
				x = i*D-(N-1)*0.5*D
				y = j*D-(N-1)*0.5*D
				nodes[i][j] = roads.addNode( i*N+j, [x,0,y], 1 )
				print i, j, x, y
				
		def connect(i1,i2,j1,j2,d1,d2):
			n1 = nodes[i1][j1]
			n2 = nodes[i2][j2]
			road = roads.addRoad('myRoad', 'tertiary', n1, n2, d1, d2, L)
			
			p1 = Vec3(n1.getVector("position"))
			p2 = Vec3(n2.getVector("position"))
			road.addTrafficLight(p1+(p2-p1)*0.9)
			road.addTrafficLight(p2+(p1-p2)*0.9)
		
		for i in range(1,N-1):
			for j in range(N-1): 
				connect(i,i,j,j+1,[0,0,1],[0,0,1])
				connect(j,j+1,i,i,[1,0,0],[1,0,0])
		
	# roads
	doGrid(4, 4, 60)
	
	roads.setTerrainOffset(0.05) # 0.35
	roads.compute()
	roads.updateAsphaltTexture()	
	#VR.testTraffic()
	
	# buildings
	def addSquareBuilding(district, x0, y0, s, H):
		w2 = s*0.5
		b = VR.Polygon()
		b.addPoint([x0-w2,y0-w2])
		b.addPoint([x0-w2,y0+w2])
		b.addPoint([x0+w2,y0+w2])
		b.addPoint([x0+w2,y0-w2])
		district.addBuilding(b, H)
		
	def addTriangleBuilding(district, x0, y0, s, d, H):
		b = VR.Polygon()
		x0 -= s*0.5*d[0]
		y0 -= s*0.5*d[1]
		b.addPoint([x0,y0])
		b.addPoint([x0+d[0]*s,y0])
		b.addPoint([x0,y0+d[1]*s])
		district.addBuilding(b, H)
	
	district = world.getDistrict()
	#district.addTexture('models/textures/Buildings.png', 'building')
	
	addSquareBuilding(district,  0,  0, 35, 3)
	addSquareBuilding(district, 60,  0, 35, 4)
	addSquareBuilding(district,  0, 60, 35, 2)
	addSquareBuilding(district,-60,  0, 35, 4)
	addSquareBuilding(district,  0,-60, 35, 5)
	
	addTriangleBuilding(district, 60, 60, 35, [ 1, 1], 2)
	addTriangleBuilding(district,-60, 60, 35, [-1, 1], 4)
	addTriangleBuilding(district,-60,-60, 35, [-1,-1], 3)
	addTriangleBuilding(district, 60,-60, 35, [ 1,-1], 3)
	









	
	
	
	
