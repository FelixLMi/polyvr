	import VR
	
	if hasattr(VR, 'scene'): VR.scene.destroy()
	VR.scene = VR.Object('scene', 'light')
	
	def makeTeapot(lvl):
		t = VR.Geometry('teapot')
		t.setPrimitive('Teapot '+str(lvl)+' 1')
		return t
	
	lod = VR.Lod('myLod')
	lod.addChild( makeTeapot(4) )
	lod.addChild( makeTeapot(3) )
	lod.addChild( makeTeapot(2) )
	
	lod.setDistance(0,8)
	lod.setDistance(1,12)
	VR.scene.addChild(lod)
	
	
	def onSwitch(ids):
		print 'onSwitch Lod from', ids.getCurrent(), 'to', ids.getLast()
	
	lod.setCallback(onSwitch)
