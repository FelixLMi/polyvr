	VR.target2 = getTarget('target2', [0.2,0,0.2], VR.target1)
	VR.target3 = getTarget('target3', [-0.2,0,0], VR.character)
	VR.target4 = getTarget('target4', [-0.2,0,0.2], VR.target3)
		
	setTarget(3, VR.target1)  # ankle
