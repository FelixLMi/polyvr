	import VR
	from math import sin, cos
	#return
	
	def getTarget(name, p0, parent):
		if hasattr(VR, name): 
			t = getattr(VR, name)
			if t: return t
		t = VR.Geometry(name, 'light')
		if parent: parent.addChild(t)
		t.setPrimitive('Box 0.05 0.05 0.05 1 1 1')
		t.setPickable(1)
		t.setWorldFrom(p0)
		return t
		
	def setTarget(jID, t):
		VR.fabrik.setTarget(jID, VR.character.getPoseTo(t))
		
	#VR.target1 = getTarget('target1', [0,0,VR.armL*0.5], None)
	#setTarget(VR.armN-1, VR.target1)  # ankle
	
